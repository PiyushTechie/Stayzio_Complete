<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stayzio - Premium Navbar</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #fafbfc;
            line-height: 1.5;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 32px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 72px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 22px;
            font-weight: 700;
            color: #1a1a1a;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .logo:hover {
            transform: translateY(-1px);
        }

        .logo-icon {
            width: 36px;
            height: 36px;
            background: linear-gradient(145deg, #fe424d, #ff6b7a);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            box-shadow: 0 4px 12px rgba(254, 66, 77, 0.25);
            transition: all 0.3s ease;
        }

        .logo:hover .logo-icon {
            transform: rotate(5deg) scale(1.05);
            box-shadow: 0 6px 20px rgba(254, 66, 77, 0.35);
        }

        .nav-menu {
            display: flex;
            align-items: center;
            gap: 8px;
            list-style: none;
        }

        .nav-item a {
            text-decoration: none;
            color: #6b7280;
            font-weight: 500;
            font-size: 15px;
            padding: 12px 20px;
            border-radius: 10px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            white-space: nowrap;
        }

        .nav-item a::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(145deg, rgba(254, 66, 77, 0.1), rgba(255, 107, 122, 0.08));
            border-radius: 10px;
            opacity: 0;
            transition: all 0.3s ease;
            z-index: -1;
        }

        .nav-item a:hover,
        .nav-item a.active {
            color: #fe424d;
            transform: translateY(-1px);
        }

        .nav-item a:hover::before,
        .nav-item a.active::before {
            opacity: 1;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .search-container {
            position: relative;
            display: flex;
            align-items: center;
        }

        .search-input {
            padding: 12px 48px 12px 20px;
            border: 2px solid #e5e7eb;
            border-radius: 14px;
            font-size: 14px;
            width: 280px;
            transition: all 0.3s ease;
            background: #f9fafb;
            color: #374151;
            font-weight: 500;
        }

        .search-input::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

        .search-input:focus {
            outline: none;
            border-color: #fe424d;
            background: #ffffff;
            box-shadow: 0 0 0 4px rgba(254, 66, 77, 0.1);
            transform: translateY(-1px);
        }

        .search-icon {
            position: absolute;
            right: 16px;
            color: #9ca3af;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 4px;
            border-radius: 6px;
        }

        .search-icon:hover {
            color: #fe424d;
            background: rgba(254, 66, 77, 0.1);
        }

        .user-profile {
            position: relative;
        }

        .profile-button {
            width: 44px;
            height: 44px;
            border-radius: 14px;
            background: linear-gradient(145deg, #fe424d, #ff6b7a);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
            position: relative;
            overflow: hidden;
        }

        .profile-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.2);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .profile-button:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 8px 25px rgba(254, 66, 77, 0.4);
        }

        .profile-button:hover::before {
            opacity: 1;
        }

        .profile-dropdown {
            position: absolute;
            top: calc(100% + 12px);
            right: 0;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 8px 16px rgba(0, 0, 0, 0.05);
            min-width: 180px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px) scale(0.95);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 8px;
        }

        .profile-dropdown.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0) scale(1);
        }

        .dropdown-item {
            padding: 12px 16px;
            color: #374151;
            text-decoration: none;
            display: block;
            transition: all 0.2s ease;
            font-size: 14px;
            font-weight: 500;
            border-radius: 10px;
            position: relative;
        }

        .dropdown-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(145deg, rgba(254, 66, 77, 0.08), rgba(255, 107, 122, 0.06));
            border-radius: 10px;
            opacity: 0;
            transition: opacity 0.2s ease;
            z-index: -1;
        }

        .dropdown-item:hover {
            color: #fe424d;
            transform: translateX(4px);
        }

        .dropdown-item:hover::before {
            opacity: 1;
        }

        .signup-btn {
            color: #fe424d !important;
            background: linear-gradient(145deg, rgba(254, 66, 77, 0.1), rgba(255, 107, 122, 0.08));
            border-radius: 10px;
            padding: 12px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            white-space: nowrap;
        }

        .signup-btn:hover {
            transform: translateY(-1px) scale(1.02);
            box-shadow: 0 4px 12px rgba(254, 66, 77, 0.15);
        }

        .login-btn {
            color: #6b7280 !important;
            padding: 12px 20px;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            white-space: nowrap;
        }

        .login-btn:hover {
            background: rgba(0, 0, 0, 0.04);
            transform: translateY(-1px);
        }

        .mobile-menu-button {
            display: none;
            background: none;
            border: none;
            font-size: 22px;
            cursor: pointer;
            color: #6b7280;
            transition: all 0.3s ease;
            padding: 8px;
            border-radius: 8px;
        }

        .mobile-menu-button:hover {
            color: #fe424d;
            background: rgba(254, 66, 77, 0.1);
        }

        .mobile-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            padding: 24px 32px;
            opacity: 0;
            transform: translateY(-20px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .mobile-menu.show {
            opacity: 1;
            transform: translateY(0);
        }

        .mobile-nav-item {
            padding: 16px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .mobile-nav-item:last-child {
            border-bottom: none;
        }

        .mobile-nav-item a {
            color: #6b7280;
            text-decoration: none;
            font-weight: 500;
            font-size: 16px;
            transition: all 0.3s ease;
            display: block;
            padding: 8px 16px;
            border-radius: 8px;
            margin: -8px -16px;
        }

        .mobile-nav-item a:hover,
        .mobile-nav-item a.active {
            color: #fe424d;
            background: rgba(254, 66, 77, 0.08);
            transform: translateX(8px);
        }

        .mobile-search {
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        .mobile-search .search-input {
            width: 100%;
            margin-bottom: 16px;
        }

        .mobile-nav-item.mobile-buttons {
            padding: 0;
            border-bottom: none;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .mobile-nav-item.mobile-buttons a {
            margin: 0;
            padding: 16px;
            display: block;
            width: 100%;
            text-align: center;
        }

        @media (max-width: 768px) {
            .nav-menu,
            .search-container {
                display: none;
            }

            .mobile-menu-button {
                display: block;
            }

            .mobile-menu.show {
                display: block;
            }

            .nav-container {
                padding: 0 20px;
                height: 68px;
            }

            .logo {
                font-size: 20px;
            }

            .logo-icon {
                width: 32px;
                height: 32px;
            }

            .profile-button {
                width: 40px;
                height: 40px;
                font-size: 14px;
            }
        }

        @media (max-width: 480px) {
            .nav-container {
                padding: 0 16px;
            }
        }

        /* Smooth scroll behavior */
        html {
            scroll-behavior: smooth;
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #fe424d;
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #e63946;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/listings" class="logo">
                <div class="logo-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" fill="none" stroke="currentColor" stroke-width="2"/>
                        <path d="M2 12h20" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                Stayzio
            </a>

            <ul class="nav-menu">
                <li class="nav-item"><a href="/listings" class="active">Home</a></li>
                <li class="nav-item"><a href="/about">About</a></li>
                <li class="nav-item"><a href="/contact">Contact</a></li>
            </ul>

            <div class="nav-right">
                <div class="search-container">
                    <input type="text" class="search-input" placeholder="Search properties...">
                    <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                        <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                        <path d="21 21l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </div>
                <a class="nav-item signup-btn" href="/listings/new">Become a Host</a>

                <% if (currentUser) { %>
                    <div class="user-profile">
                        <button class="profile-button" onclick="toggleDropdown()">
                            <%= currentUser.username.charAt(0).toUpperCase() %>
                        </button>
                        <div class="profile-dropdown" id="profileDropdown">
                            <a href="/profile" class="dropdown-item">Profile</a>
                            <a href="/logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/signup" class="nav-item login-btn">Sign Up</a>
                    <a href="/login" class="nav-item signup-btn">Login</a>
                <% } %>
            </div>

            <button class="mobile-menu-button" onclick="toggleMobileMenu()">
                ☰
            </button>
        </div>

        <div class="mobile-menu" id="mobileMenu">
            <div class="mobile-nav-item"><a href="/listings" class="active">Home</a></div>
            <div class="mobile-nav-item"><a href="/about">About</a></div>
            <div class="mobile-nav-item"><a href="/contact">Contact</a></div>

            <div class="mobile-search">
                <input type="text" class="search-input" placeholder="Search properties...">
            </div>

            <div class="mobile-nav-item mobile-buttons">
                <% if (currentUser) { %>
                    <a href="/profile" class="signup-btn">Profile</a>
                    <a href="/logout" class="login-btn">Logout</a>
                <% } else { %>
                    <a href="/signup" class="signup-btn">Sign Up</a>
                    <a href="/login" class="login-btn">Login</a>
                <% } %>
            </div>
        </div>
    </nav>

    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('show');
        }

        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            mobileMenu.classList.toggle('show');
        }

        document.addEventListener('click', function(event) {
            const profile = document.querySelector('.user-profile');
            const dropdown = document.getElementById('profileDropdown');
            if (profile && dropdown && !profile.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });

        document.addEventListener('click', function(event) {
            const navbar = document.querySelector('.navbar');
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileButton = document.querySelector('.mobile-menu-button');
            if (!navbar.contains(event.target) && !mobileButton.contains(event.target)) {
                mobileMenu.classList.remove('show');
            }
        });

        document.querySelectorAll('.nav-item a, .mobile-nav-item a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelectorAll('.nav-item a, .mobile-nav-item a').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                const linkText = this.textContent.trim();
                document.querySelectorAll('.nav-item a, .mobile-nav-item a').forEach(l => {
                    if (l.textContent.trim() === linkText) l.classList.add('active');
                });
                document.getElementById('mobileMenu').classList.remove('show');
            });
        });

        let lastScrollTop = 0;
        const navbar = document.querySelector('.navbar');
        window.addEventListener('scroll', function() {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            if (scrollTop > lastScrollTop && scrollTop > 100) {
                navbar.style.transform = 'translateY(-100%)';
            } else {
                navbar.style.transform = 'translateY(0)';
            }
            if (scrollTop > 20) {
                navbar.style.background = 'rgba(255, 255, 255, 0.9)';
                navbar.style.backdropFilter = 'blur(25px)';
            } else {
                navbar.style.background = 'rgba(255, 255, 255, 0.95)';
                navbar.style.backdropFilter = 'blur(20px)';
            }
            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        });

        window.addEventListener('load', function() {
            navbar.style.transform = 'translateY(-100%)';
            setTimeout(() => {
                navbar.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                navbar.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
</body>
</html>